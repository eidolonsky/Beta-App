= form_for(team) do |f|
  .form
    - if team.errors.any?
      #error_explanation
        %h2
          = pluralize(team.errors.count, "error")
          prohibited this team from being saved:
        %ul
          - team.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :name
      = f.text_field :name, :placeholder=> current_user.name.titleize + "'s Crazy Team"
    .field
      = f.label :manager
      = f.text_field :manager, :placeholder=> current_user.name.titleize
    .field
      = f.label :id
      = f.select :user_id, User.all.collect {|u| [u.id]}, :readonly=> true
    .actions
      = f.submit

