%p#notice= notice
%h1.newh1 Players
.newback
  Name, Goals, Assists, Drafter
.tilebox
  .tiles
    - @players.each do |player|
      .playername
        = player.name
        = player.goals
        = player.assists
        - player.rosters.each do |roster|
          %b
            = roster.team_id
        =form_for @pick, url: {action: "pick"}, :method => :POST do
          =button_tag 'Draft', type: :submit
          =hidden_field_tag(:player_store, player.id)
        
        = link_to 'Show', player
