%meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
%h1.newh1
  Players with #{@tag.name}
%nav
  %ul.topnav
    %li.to_new
      = link_to "New Player", new_player_path , class: "new_player"
    %li |
    %li.to_player
      = link_to "Players", players_path
    %li.to_tag
      = link_to "Tags", tags_path
#players.tilebox
  - @tag.players.each do |player|
    .tiles
      .playertitle
        = link_to player.name, player_path(player)